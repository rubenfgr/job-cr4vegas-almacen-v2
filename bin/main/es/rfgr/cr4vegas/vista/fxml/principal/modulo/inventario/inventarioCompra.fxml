<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="panelRaiz" stylesheets="@../../../../css/modena.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.rfgr.cr4vegas.vista.fxml.controlador.principal.modulo.inventario.InventarioCompraControlador">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="label-header" text="Compras" />
            <HBox spacing="5.0">
               <children>
                  <Label styleClass="label-attribute" text="Total compras realizadas:" />
                  <Label fx:id="lbTotalComprasRealizadas" styleClass="label-bright" text="---">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </Label>
                  <Label styleClass="label-attribute" text="Total materiales comprados:" />
                  <Label fx:id="lbTotalMaterialesComprados" styleClass="label-bright" text="---">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </Label>
                  <Label styleClass="label-attribute" text="Total gastado:" />
                  <Label fx:id="lbTotalGastado" styleClass="label-bright" text="---" />
               </children>
            </HBox>
            <HBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label styleClass="label-titulo" text="Compras realizadas" />
                              <Label styleClass="label-attribute" text="Buscar:" />
                              <TextField fx:id="tfBuscarCompra" />
                           </children>
                        </HBox>
                        <TableView fx:id="tvCompras" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="tcCompraCodigo" prefWidth="75.0" text="Codigo" />
                            <TableColumn fx:id="tcCompraOperario" prefWidth="120.0" text="Operario" />
                              <TableColumn fx:id="tcCompraTienda" minWidth="0.0" prefWidth="125.0" text="Tienda" />
                              <TableColumn fx:id="tcCompraFactura" prefWidth="75.0" text="Factura" />
                              <TableColumn fx:id="tcCompraTotal" minWidth="75.0" prefWidth="75.0" text="Total" />
                              <TableColumn fx:id="tcCompraFecha" prefWidth="120.0" text="Fecha" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label styleClass="label-attribute" text="Material" />
                              <Label styleClass="label-attribute" text="Buscar:" />
                              <TextField fx:id="tfBuscarMaterial" />
                           </children>
                        </HBox>
                        <TableView fx:id="tvComprasMateriales" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="tcMaterialNombre" prefWidth="75.0" text="Material" />
                            <TableColumn fx:id="tcMaterialCantidad" prefWidth="75.0" text="Cantidad" />
                              <TableColumn fx:id="tcMaterialPrecio" prefWidth="75.0" text="Precio" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
