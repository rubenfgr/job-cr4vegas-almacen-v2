<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="panelRaiz" stylesheets="@../../../../css/modena.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.rfgr.cr4vegas.vista.fxml.controlador.principal.modulo.inventario.InventarioTaquillaControlador">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label styleClass="label-header" text="Almacenes" />
               </children>
            </HBox>
            <HBox spacing="5.0">
               <children>
                  <Label styleClass="label-attribute" text="Total material retirado:" />
                  <Label fx:id="lbTotalMaterialRetirado" styleClass="label-bright" text="---">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </Label>
                  <Label styleClass="label-attribute" text="Total gastado:" />
                  <Label fx:id="lbTotalGastado" styleClass="label-bright" text="---">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </Label>
                  <Label styleClass="label-attribute" text="Total material en inventario:" />
                  <Label fx:id="lbTotalMaterialInventario" styleClass="label-bright" text="---">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </Label>
                  <Label styleClass="label-attribute" text="Total en inventario:" />
                  <Label fx:id="lbTotalInventario" styleClass="label-bright" text="---" />
               </children>
            </HBox>
            <HBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label styleClass="label-attribute" text="Buscar:" />
                              <TextField fx:id="tfBuscarAlmacen" />
                           </children>
                        </HBox>
                        <TableView fx:id="tvAlmacen" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="tcID" prefWidth="75.0" text="ID" />
                              <TableColumn fx:id="tcActivo" prefWidth="75.0" text="Activo" />
                              <TableColumn fx:id="tcTipo" prefWidth="75.0" text="Tipo" />
                              <TableColumn fx:id="tcLugar" prefWidth="75.0" text="Lugar" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Registro">
                                 <padding>
                                    <Insets right="25.0" />
                                 </padding>
                              </Label>
                              <Label styleClass="label-attribute" text="Buscar:" />
                              <TextField fx:id="tfBuscarRegistro" />
                           </children>
                        </HBox>
                        <TableView fx:id="tvRegistro" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="tcRegistroMaterial" prefWidth="75.0" text="Material" />
                              <TableColumn fx:id="tcRegistroCantidad" prefWidth="75.0" text="Cantidad" />
                              <TableColumn fx:id="tcRegistroFecha" prefWidth="75.0" text="Fecha" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
