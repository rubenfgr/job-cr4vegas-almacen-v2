<AnchorPane fx:id="panelRaiz" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.rfgr.cr4vegas.vista.fxml.controlador.ventana.inventario.VentanaManipulaCompraControlador">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox prefHeight="200.0" prefWidth="400.0" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="Materiales" />
                              <Label text="Buscar:">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="tfBuscarMaterial" />
                              <Button fx:id="btAgregarMaterial" mnemonicParsing="false" text="+" />
                           </children>
                        </HBox>
                        <TableView fx:id="tvMateriales" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="tcMaterialNombre" prefWidth="75.0" text="Material" />
                            <TableColumn fx:id="tcMaterialCantidad" maxWidth="100.0" minWidth="60.0" prefWidth="60.0" text="Cantidad" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="400.0" spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <GridPane hgap="5.0" vgap="5.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Entidad:" />
                              <Label text="Factura:" GridPane.rowIndex="1" />
                              <ComboBox fx:id="cbxEntidad" prefWidth="180.0" GridPane.columnIndex="1" />
                              <TextField fx:id="tfFactura" maxWidth="180.0" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1" />
                              <Label text="Operario:" GridPane.rowIndex="2" />
                              <ComboBox fx:id="cbxOperario" prefWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <CheckBox fx:id="cbParte" mnemonicParsing="false" text="Parte" GridPane.rowIndex="3" />
                              <ComboBox fx:id="cbxParte" disable="true" prefWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                           </children>
                        </GridPane>
                        <HBox alignment="BOTTOM_LEFT" spacing="5.0">
                           <children>
                              <Label text="Materiales agregados" />
                              <Button fx:id="btEliminar" mnemonicParsing="false" text="Eliminar" />
                           </children>
                        </HBox>
                        <TableView fx:id="tvMaterialesAgregados" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="tcCompraMaterialNombre" prefWidth="75.0" text="Material" />
                            <TableColumn fx:id="tcCompraMaterialCantidad" maxWidth="100.0" minWidth="60.0" prefWidth="60.0" text="Cantidad" />
                              <TableColumn fx:id="tcCompraMaterialPrecio" prefWidth="75.0" text="Precio" />
                              <TableColumn fx:id="tcCompraMaterialPrecioPublico" prefWidth="75.0" text="Precio pÃºblico" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="btAceptar" defaultButton="true" mnemonicParsing="false" text="Aceptar" />
                  <Button fx:id="btCancelar" cancelButton="true" mnemonicParsing="false" text="Cancelar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>
