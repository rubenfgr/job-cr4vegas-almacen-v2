<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="panelRaiz" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.rfgr.cr4vegas.vista.fxml.controlador.ventana.parte.VentanaAsociaParteOperarioControlador">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <VBox alignment="BOTTOM_LEFT" prefWidth="350.0" spacing="5.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="Buscar:" />
                              <TextField fx:id="tfBuscar" />
                           </children>
                        </HBox>
                        <ListView fx:id="lvOperario" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox prefWidth="350.0" spacing="5.0">
                     <children>
                        <HBox spacing="5.0">
                           <children>
                              <Label fx:id="lbAsociaID" text="Parte:" />
                              <Label fx:id="lbAsociaValor" text="---" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="BOTTOM_LEFT" spacing="5.0">
                           <children>
                              <Label alignment="BOTTOM_LEFT" text="Material a retirar" />
                              <Button fx:id="btEliminar" alignment="CENTER_RIGHT" mnemonicParsing="false" text="Eliminar">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0" />
                        <TableView fx:id="tvOperariosAsociados" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn fx:id="tcOperario" prefWidth="75.0" text="Operario" />
                            <TableColumn fx:id="tcFecha" prefWidth="75.0" text="Fecha" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox spacing="5.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <Button fx:id="btAceptar" defaultButton="true" mnemonicParsing="false" text="Aceptar" />
                  <Button fx:id="btCancelar" cancelButton="true" mnemonicParsing="false" text="Cancelar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>
