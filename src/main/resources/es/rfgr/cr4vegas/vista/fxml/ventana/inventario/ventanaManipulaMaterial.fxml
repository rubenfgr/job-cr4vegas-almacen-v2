<AnchorPane fx:id="panelRaiz" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.rfgr.cr4vegas.vista.fxml.controlador.ventana.inventario.VentanaManipulaMaterialControlador">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <GridPane hgap="5.0" prefWidth="600.0" vgap="5.0">
                          <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" hgrow="NEVER" prefWidth="130.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="Nombre técnico:" />
                              <Label text="Nombre:" GridPane.rowIndex="1" />
                              <TextField fx:id="tfNombreTecnico" GridPane.columnIndex="1" />
                              <TextField fx:id="tfNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </GridPane>
                        <HBox>
                           <children>
                              <GridPane hgap="5.0" vgap="5.0">
                                <columnConstraints>
                                  <ColumnConstraints halignment="RIGHT" hgrow="NEVER" prefWidth="130.0" />
                                  <ColumnConstraints hgrow="NEVER" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <Label text="Activo:" />
                                    <Label text="Cantidad Mínima:" GridPane.rowIndex="2" />
                                    <Label text="Ubicación:" GridPane.rowIndex="3" />
                                    <Label text="Familia:" GridPane.rowIndex="4" />
                                    <Label text="Tipo material:" GridPane.rowIndex="5" />
                                    <Label text="Diametro:" GridPane.rowIndex="6" />
                                    <Label text="PN:" GridPane.rowIndex="7" />
                                    <Label text="Marca:" GridPane.rowIndex="8" />
                                    <CheckBox fx:id="cbActivo" mnemonicParsing="false" GridPane.columnIndex="1" />
                                    <TextField fx:id="tfCantidadMinima" maxWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <ComboBox fx:id="cbxUbicacion" prefHeight="26.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <ComboBox fx:id="cbxFamilia" prefHeight="26.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    <ComboBox fx:id="cbxTipoMaterial" prefHeight="26.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                    <TextField fx:id="tfDiametro" maxWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                    <TextField fx:id="tfPN" maxWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                    <TextField fx:id="tfMarca" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                                    <Label text="Cantidad:" GridPane.rowIndex="1" />
                                    <TextField fx:id="tfCantidad" maxWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 </children>
                              </GridPane>
                              <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Button fx:id="btAgregarImagen" mnemonicParsing="false" text="Agregar imagen">
                                       <HBox.margin>
                                          <Insets top="20.0" />
                                       </HBox.margin>
                                       <VBox.margin>
                                          <Insets top="20.0" />
                                       </VBox.margin>
                                    </Button>
                                    <ImageView fx:id="ivImagen" fitHeight="225.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                                       <VBox.margin>
                                          <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
                                       </VBox.margin>
                                    </ImageView>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <HBox alignment="CENTER" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <Button fx:id="btAceptar" defaultButton="true" mnemonicParsing="false" text="Aceptar" />
                  <Button fx:id="btCancelar" cancelButton="true" mnemonicParsing="false" text="Cancelar" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
